<div class="max-w-screen mx-auto px-6 py-12">
  <div class="mb-3">
    <%= link_to 'Back to latest posts', :posts, class: 'text-sm text-gray-500 hover:text-gray-900' %>
  </div>

  <h1 class="text-3xl font-semibold"><%= @author.name %></h1>
  <div class="mt-2">
    <%= pluralize @author.posts.count, 'post' %>
    &bull;
    <%= @author.country.name %>
  </div>

  <div class="mt-6 space-y-3">
    <% @author.posts.each do |post| %>
      <%= render post %>
    <% end %>
  </div>
</div>
