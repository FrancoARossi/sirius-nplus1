<div class="border rounded-md p-3">
  <div class="text-xs mb-1.5">
    <% unless @author == post.author %>
      <%= link_to post.author.name, post.author, class: 'font-medium' %>
      &bull;
      <%= post.author.country.name %>
      &bull;
    <% end %>
    <%= post.published_at.strftime("%B %d, %Y") %>
  </div>
  <div><%= post.message %></div>
</div>
