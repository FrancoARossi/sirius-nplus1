<div class="max-w-screen mx-auto px-6 py-12">
  <h1 class="text-3xl font-semibold">Ranking</h1>

  <div class="mt-3">
    <%= link_to 'View latest posts', :posts, class: 'text-sm text-gray-500 hover:text-gray-900' %>
  </div>

  <div class="mt-6 space-y-3">
    <ul>
      <% @authors.each do |author| %>
        <li>
          <%= link_to author.name, author, class: 'font-medium' %>
          &bull;
          <%= pluralize author.posts.count, 'post' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
